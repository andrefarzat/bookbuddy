@model IEnumerable<BookBuddy.Domain.Customers.Customer>

<h1>Customers</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.Email</td>
            <td>
                <a asp-action="Details" asp-route-id="@customer.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New</a>
